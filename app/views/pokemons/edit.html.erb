<h1>Edit Pokemon</h1>

<%= form_with(model: @pokemon, local: true) do |form| %>

  <p>
    <%= form.label :Num %><br>
    <%= form.text_field :"num" %>
  </p>

  <p>
    <%= form.label :Name %><br>
    <%= form.text_field :"name" %>
  </p>

  <p>
    <%= form.label :Height %><br>
    <%= form.text_field :"height" %>
  </p>

  <p>
    <%= form.label :Weight %><br>
    <%= form.text_field :"weight" %>
  </p>

  <p>
    <%= form.label :Candy %><br>
    <%= form.text_field :"candy" %>
  </p>

  <p>
    <%= form.label :Candy_Count %><br>
    <%= form.text_field :"candy_count" %>
  </p>

  <p>
    <%= form.label :Egg %><br>
    <%= form.text_field :"egg" %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', pokemons_path %>
<%= link_to 'Destroy', pokemon_path(@pokemon),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
